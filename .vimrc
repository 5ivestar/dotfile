"displaying the number of the line
set number

"insert indent when new line
set autoindent

"how much the indent will be
set shiftwidth=4

"convert tab into space
set expandtab

"how much the converted space from tabwill be 
set tabstop=4

set nobackup

"search with case insensitive
set ignorecase
"only capital character is case sensitive
set smartcase

"display match parenthaties
set showmatch

set ruler

"show tab and eof
set list
set listchars=tab:>-,extends:<,trail:-,eol:<

"show status line
set laststatus=2

"show file name
set statusline+=%<%F
